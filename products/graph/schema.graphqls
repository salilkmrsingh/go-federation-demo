extend schema
  @link(url: "https://specs.apollo.dev/federation/v2.3",
        import: ["@key"])

type Product @key(fields: "id") {
  id: ID!
  name: String!
  price: Float!
}

type Query {
  products: [Product!]!
}

type Mutation {
  createProduct(name: String!, price: Float!): Product!
  updateProduct(id: ID!, input: UpdateProduct!): Product!
  deleteProduct(id: ID!): Product
}

input UpdateProduct {
  name: String
  price: Float
}